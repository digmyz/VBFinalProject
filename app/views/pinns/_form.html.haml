= simple_form_for @pinn, html: { multipart: true } do |f|
  - if @pinn.errors.any?
    #errors
    %h2
    = pluralize(@pinn.errors.count, "error")
    prevented this Pinn from saving 
    %ul
      - @pinn.errors.full_messages.each do |msg|
        %li= msg

  .form-group
    = f.input :title, input_html: { class: `form-control` }

  .form-group
    = f.input :description, input_html: { class: `form-control` }

  = f.button :submit, class: "btn btn-primary"   